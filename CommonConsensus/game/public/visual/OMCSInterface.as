class OMCSInterface {		static var sendXML:XML;	static var receiveXML:XML;	static var sendURL:String;		static var machine = "epsilon.media.mit.edu:3000/";		static var receiveLinksCallback = null;	static function getLinks(nodeStr, callback) {		sendXML = new XML('expr='+escape(nodeStr));		receiveXML = new XML();		sendURL = "http://"+machine+"/get_links_for_node";		sendXML.sendAndLoad(sendURL, receiveXML);		receiveLinksCallback = callback;		receiveXML.onLoad = OMCSInterface.receiveLinks;	}		static function receiveLinks() {		var results = new Array();		var root = receiveXML.firstChild;		var node = root.firstChild;		while (node) {			var id = Number(node.attributes.id);			var type = String(node.attributes.type);			var target = String(node.firstChild);			results.push({ id: id, type: type, target: target });			node = node.nextSibling;		}		receiveLinksCallback(results);	}}