<html>
    <head>
        <title><%= @abc || "Common Consensus" %></title>
        <%= stylesheet_link_tag "narrate", :media => "all" %>
        <%= javascript_include_tag "prototype", "effects", "dragdrop", "controls" %>
        
        <META HTTP-EQUIV="Pragma" CONTENT="no-cache">
	    <META HTTP-EQUIV="CACHE-CONTROL" CONTENT="NO-CACHE">

        <META NAME="GOOGLEBOT" CONTENT="NOARCHIVE">
 
    </head>
    
    
    <body>
	
	<span id="header">
		    <li><%=link_to("<span>About</span>", :controller => "goals", :action => "about")%></li>
		  <li><%= link_to("<span>Help</span>", :controller => "goals", :action => "faq")%></li>
	        <li><%= link_to("<span>Games</span>", :controller => "goals", :action => "index")%></li> 
   
		  <% if @session[:user] %>
		     <li><%= link_to("<span>Logout</span>", :controller => "Account", :action => "logout") %></li>
	       	 <% else %>
		     <li><%= link_to("<span>Login</span>",:controller => "Account", :action => "login") %></li>
		     <li><%= link_to("<span>Sign up</span>", :controller => "Account", :action => "signup")%></li>
		 <% end %>
	</span>
										
        <div id="main"> 



		<a href="http://localhost:3000"><img src="http://yuggoth.media.mit.edu:3000/narrative.gif" border=0"></a>
		  
	
	       <% if flash[:notice]%>
		    <div id="notice"><%= flash[:notice] %></div>
		    <% flash[:notice] = nil %>
       	 <% end%>
	
	
	
	<!-- Development Stuff -->
	<% if ENV['RAILS_ENV'] == 'development' %>
    <div id="debug" style="margin: 40px 5px 5px 5px;">
        <a href="#de-bug" onClick="javascript:showDebug();" style="text-decoration: none; color: #ccc;">Show Debug Info &#10162;</a>
        <div id="debug_info" style="display: none;">
            <%= debug session %>
            <%= debug params %>
        </div>
    </div>
	<% end %>
            
           
	<%= @content_for_layout %>
     </div> <div id="footer">2006 / Commonsense Computing @ MIT Media Lab <% if @session[:user] %><% if (@session[:user].login == "dustin" or @session[:user].login == "alea") %> <%= link_to("!", :controller => "admin", :action => "index") %> </font></center><% end %><% end %></div>
    </body>
</html>
